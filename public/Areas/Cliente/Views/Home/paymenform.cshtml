@model edu_course.Models.tbl_paymentValidation

@{
    Layout = "~/Areas/Cliente/Views/Shared/_Layout2.cshtml";
}

<!-- Registrations page-->
<div ng-controller="headerCtrl">
    <div class="container" style="background-color:white ; width:80% ">
        <h2 style="color:black; text-align:center"><b>PAYMENT FORM</b></h2>
        <div class="panel-group" id="accordion">
            <div class="panel panel-default">
                <div class="panel-body">
                    <section>
                        <div class="row">
                            <div class="col-md-10 offset-md-1">


                                @using (Html.BeginForm("paymenform", "Home", FormMethod.Post, new { @id = "form", enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-horizontal">
                                        <hr />
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    </div>


                                    <div class="form-group">
                                        @Html.Label("Bank Name", htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-12">
                                            @Html.DropDownListFor(model => model.BankId, (IEnumerable<SelectListItem>)ViewBag.bank, "--Select Type--", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.BankId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>




                                    <div class="form-group">
                                        @Html.Label("Account No", htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-12">
                                            @Html.EditorFor(model => model.Account_No, new { htmlAttributes = new { @class = "form-control input-sm", @type = "text", placeholder = @Html.DisplayName("Enter Account No") } })
                                            @Html.ValidationMessageFor(model => model.Account_No, "", new { @class = "text-danger" })
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        @Html.Label("Mode Of Transaction", htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-12">
                                            @Html.DropDownListFor(model => model.TransactionTypeId, (IEnumerable<SelectListItem>)ViewBag.transaction, "--Select Type--", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => Model.TransactionTypeId, "", new { @class = "text-danger" })
                                        </div>

                                    </div>




                                    <div class="form-group">
                                        @Html.Label("Transaction Slip No", htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-12">
                                            @Html.EditorFor(model => model.TransactionSlipNumber, new { htmlAttributes = new { @class = "form-control input-sm", @type = "text", placeholder = @Html.DisplayName("Enter Transaction Slip Number") } })
                                            @Html.ValidationMessageFor(model => model.TransactionSlipNumber, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("IBAN", htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-12">
                                            @Html.EditorFor(model => model.IBAN, new { htmlAttributes = new { @class = "form-control input-sm", @type = "text", placeholder = @Html.DisplayName("Enter IBAN") } })
                                            @Html.ValidationMessageFor(model => model.IBAN, "", new { @class = "text-danger" })
                                        </div>
                                    </div>



                                    <div class="form-group">
                                        @Html.Label("File", htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-12">
                                            @Html.TextBoxFor(model => model.UserImageFIle, new { @accept = "image/png,image/jpg,image/jpeg", type = "file", @class = "form-control input-sm" })
                                            @Html.ValidationMessageFor(model => model.UserImageFIle, "", new { @class = "text-danger" })

                                        </div>
                                    </div>

                                    <div class="form-group ">
                                        <div class="col-md-4">
                                            <button type="submit" class="btn btn btn-success">SUBMIT </button>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>




<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>


@if (ViewBag.Message != null)
{
    <script type="text/javascript">

         window.onload = function () {
          alert("@ViewBag.Message");
          };
    </script>

}