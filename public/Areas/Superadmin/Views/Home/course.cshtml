@model edu_course.Models.tbl_coursevalidation
@{
    Layout = "~/Areas/Superadmin/Views/Shared/_Layout.cshtml";

}
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
<script src="~/Themes/ckeditor/ckeditor.js"></script>
<!-- Registrations page-->
<div ng-controller="headerCtrl">
    <div class="container" style="background-color:white ; width:80% ">
        <h2 style="color:black; text-align:center"><b>ADD COURSE</b></h2>
        <div class="panel-group" id="accordion">
            <div class="panel panel-default">
                <div class="panel-body">
                    <section>
                        <div class="row">
                            <div class="col-md-10 offset-md-1">

                                @using (Html.BeginForm("course", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-horizontal">
                                        <hr />
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    </div>


                                    <div class="form-group">
                                        @Html.Label("Course Name", htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-12">
                                            @Html.EditorFor(model => model.courseName, new { htmlAttributes = new { @class = "form-control input-sm", @type = "text", placeholder = @Html.DisplayName("Enter Course Title") } })
                                            @Html.ValidationMessageFor(model => model.courseName, "", new { @class = "text-danger" })

                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.Label("Code", htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-12">
                                            @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control input-sm", @type = "text", placeholder = @Html.DisplayName("Enter Code") } })
                                            @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })

                                        </div>
                                    </div>




                                    <div class="form-group">
                                        @Html.Label("Course Type", htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-12">
                                            @Html.EditorFor(model => model.courseType, new { htmlAttributes = new { @class = "form-control input-sm", @type = "text", placeholder = @Html.DisplayName("Enter Course Type") } })
                                            @Html.ValidationMessageFor(model => model.courseType, "", new { @class = "text-danger" })

                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.Label("Duration", htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-12">
                                            @Html.TextBoxFor(model => model.duration, "{yyyy-MM-dd}", new { @class = "form-control", type = "datetime-local" })
                                            @Html.ValidationMessageFor(model => model.duration, "", new { @class = "text-danger" })

                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.Label("Course Description", htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-12">
                                            @Html.TextAreaFor(model => model.courseDescription, 10, 40, htmlAttributes: new { style = "width: 100%; max-width: 100%;", placeholder = @Html.DisplayName("Enter Description") })
                                            @Html.ValidationMessageFor(model => model.courseDescription, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Long Description", htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-12">
                                            @Html.TextAreaFor(model => model.longDes, 8, 40, htmlAttributes: new { style = "width: 100%; max-width: 100%;", @id = "FullDescription", placeholder = @Html.DisplayName("Enter Long Description") })
                                            @Html.ValidationMessageFor(model => model.longDes, "", new { @class = "text-danger" })

                                            <script>
                                                CKEDITOR.replace("FullDescription");
                                            </script>
                                        </div>
                                    </div>

                                            <div class="form-group">
                                                @Html.Label("Image", htmlAttributes: new { @class = "control-label col-md-4" })
                                                <div class="col-md-12">
                                                    @Html.TextBoxFor(model => model.CourseImageFIle, new {@class = "form-control input-sm", @accept = "image/png,image/jpg,image/jpeg", type = "file" })
                                                    @Html.ValidationMessageFor(model => model.CourseImageFIle, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                @Html.Label("Vedio URL", htmlAttributes: new { @class = "control-label col-md-4" })
                                                <div class="col-md-12">
                                                    @Html.EditorFor(model => model.VideoLink, new { htmlAttributes = new { @class = "form-control input-sm", @type = "text", placeholder = @Html.DisplayName("Enter Vedio URL") } })
                                                    @Html.ValidationMessageFor(model => model.VideoLink, "", new { @class = "text-danger" })
                                                </div>
                                            </div>



                                            <div class="form-group ">
                                                <div class="col-md-4">
                                                    <button type="submit" class="btn btn btn-success"> ADD </button>
                                                </div>
                                            </div>
                                }
                            </div>

                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>




@if (ViewBag.Message != null)
{
    <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>

}
