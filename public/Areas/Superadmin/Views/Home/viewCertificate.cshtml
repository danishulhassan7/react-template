@model IEnumerable<edu_course.Models.ClientCertificate>
<!DOCTYPE html>
<html lang="en">
<body>

    <div class="container"  style="background-color:white ; width:80%">
        <div class="row">

            @using (Html.BeginForm())
            {
                <div class="form-horizontal">

                    <div class="form-group">

                        @Html.Label("Search", new { @class = "col-md-2 control-label" })

                        <div class="col-md-12">
                            @Html.TextBox("searchTxt", null, new { @class = "form-control", @placeholder = "Search Your Text Here", @style = "max-width: 280px;" })
                        </div>
                        <div class="float-right">
                            <button class="btn btn-success" style="margin-left:100%" type="submit">Search</button>

                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row">
            <div class="col-md-12">

                <table class="table table-striped table">
                    <thead>
                        <tr>
                            <th>Certificate_No</th>
                            <th>UserName</th>
                            <th>Issue_Date</th>
                            <th>CourseName</th>


                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelitem => item.Certificate_Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelitem => item.UserName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelitem => item.Issue_Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelitem => item.CourseName)
                                </td>


                            </tr>

                        }

                    </tbody>
                </table>

            </div>
        </div>
    </div>
    </body>
</html>