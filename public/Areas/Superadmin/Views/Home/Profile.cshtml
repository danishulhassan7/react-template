@model edu_course.Models.SuperAdminProfileDataModel

@{
    Layout = "~/Areas/SuperAdmin/Views/Shared/_Layout.cshtml";
}




<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<div class="container">
    <div class="row flex-lg-nowrap">
        <div class="col-12 col-lg-auto mb-3" style="width: 200px;">

        </div>
    </div>
    <div class="col">
        <div class="row">
            <div class="col mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="e-profile">
                            <div class="row">
                                <div class="col-12 col-sm-auto mb-3">
                                    <div class="mx-auto" style="width: 140px;">
                                        <div class="d-flex justify-content-center align-items-center rounded" style="height: 140px; background-color: rgb(233, 236, 239);">
                                            <img src="@Url.Content(Session["imgPath"].ToString())" height="135" width="135">
                                        </div>
                                    </div>
                                </div>
                                <div class="col d-flex flex-column flex-sm-row justify-content-between mb-3">
                                    <div class="text-center text-sm-left mb-2 mb-sm-0">
                                        <h4 class="pt-sm-2 pb-1 mb-0 text-nowrap">@Session["name"].ToString()</h4>

                                    </div>
                                    <div class="text-center text-sm-right">
                                        <span class="badge badge-secondary">Administrator</span>
                                    </div>
                                </div>
                            </div>
                            <ul class="nav nav-tabs">
                                <li class="nav-item"><a href="" class="active nav-link">Settings</a></li>
                            </ul>
                            <div class="tab-content pt-3">
                                <div class="tab-pane active">
                                    @using (Html.BeginForm("Profile", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                    {
                                        @Html.AntiForgeryToken()
                                          @Html.HiddenFor(x => x.password, new { id = "hdnFlag" })
                                        <div class="row">
                                            <div class="col">
                                                <div class="row">
                                                    <div class="col">
                                                        <div class="form-group">
                                                            <label>Name</label>
                                                            @Html.EditorFor(model => model.ad_name, new { htmlAttributes = new { @class = "form-control input-sm", placeholder = @Html.DisplayName("Enter UserName") } })
                                                            @Html.ValidationMessageFor(model => model.ad_name, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>


                                                <div class="row">
                                                    <div class="col">
                                                        <div class="form-group">
                                                            <label>Email</label>
                                                            @Html.EditorFor(model => model.ad_email, new { htmlAttributes = new { @class = "form-control input-sm", placeholder = @Html.DisplayName("Enter Password") } })
                                                            @Html.ValidationMessageFor(model => model.ad_email, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>


                                                <br />
                                                <br />
                                                <br />
                                                <br />
                                                <br />
                                                <br />
                                                <br />

                                                <div class="row">
                                                    <div class="col">
                                                        <div class="row">
                                                            <div class="col">
                                                                <div class="form-group">
                                                                    <input type="file" id="UserImageFile" style="display:none" accept="image/png,image/jpg,image/jpeg" name="UserImageFile" />
                                                                    <button class="btn btn-success" id="OpenImgUpload" type="button">
                                                                        <i class="fa fa-fw fa-camera"></i>
                                                                        <span>Change Photo</span>
                                                                    </button>

                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col d-flex justify-content-end">
                                                            <div class="form-group">
                                                                <button class="btn btn-success" type="submit">Save Changes</button>

                                                            </div>
                                                        </div>



                                                    </div>
                                                </div>

                                            </div>
                                        </div>







                                    }

                                    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
                                    <script src="~/Scripts/jquery.validate.min.js"></script>
                                    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

                                    @if (ViewBag.Message != null)
            {
                                        <script type="text/javascript">

         window.onload = function () {
          alert("@ViewBag.Message");
          };
                                        </script>

                                    }
                                    <script>
                                        $('#OpenImgUpload').click(function () { $('#UserImageFile').trigger('click'); });

                                    </script>

