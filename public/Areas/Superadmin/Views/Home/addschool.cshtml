@model edu_course.Models.tbl_schoolValidation
@{
    Layout = "~/Areas/Superadmin/Views/Shared/_Layout.cshtml";
}


<!-- Registrations page-->
<div ng-controller="headerCtrl">
    <div class="container" style="background-color:white ; width:80% ">
        <h2 style="color:black; text-align:center"><b>ADD SCHOOL</b></h2>
        <div class="panel-group" id="accordion">
            <div class="panel panel-default">
                <div class="panel-body">
                    <section>
                        <div class="row">
                            <div class="col-md-10 offset-md-1">

                                @using (Html.BeginForm("addschool", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-horizontal">
                                        <hr />
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group">
                                        @Html.Label("Name", htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-12">
                                           @Html.EditorFor(model => model.School_Name, new { htmlAttributes = new { @class = "form-control input-sm", @type = "text", placeholder = @Html.DisplayName("Enter School Name") } })
                                            @Html.ValidationMessageFor(model => model.School_Name, "", new { @class = "text-danger" })

                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.Label("Image", htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-12">
                                            @Html.TextBoxFor(model => model.UserImageFIle, new { @class = "form-control input-sm", @accept = "image/png,image/jpg,image/jpeg", type = "file" })
                                            @Html.ValidationMessageFor(model => model.UserImageFIle, "", new { @class = "text-danger" })

                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.Label("Number", htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-12">
                                            @Html.EditorFor(model => model.School_Contactno, new { htmlAttributes = new { @class = "form-control input-sm", @type = "text", placeholder = @Html.DisplayName("Enter School Contact Number") } })
                                            @Html.ValidationMessageFor(model => model.School_Contactno, "", new { @class = "text-danger" })

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Address", htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-12">
                                            @Html.TextAreaFor(model => model.School_Address, 10, 40, htmlAttributes: new {required = "required", style = "width: 100%; max-width: 100%;", placeholder = @Html.DisplayName("Enter School Address ") })
                                            @Html.ValidationMessageFor(model => model.School_Address, "", new { @class = "text-danger" })
                                            
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        @Html.Label("Email", htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-12">
                                            @Html.EditorFor(model => model.School_Email, new { htmlAttributes = new { @class = "form-control input-sm", @type = "text", placeholder = @Html.DisplayName("Enter School Email") } })
                                            @Html.ValidationMessageFor(model => model.School_Email, "", new { @class = "text-danger" })

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Password", htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-12">
                                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control input-sm", @type = "password", placeholder = @Html.DisplayName("Enter School Password") } })
                                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })


                                        </div>
                                    </div>

                                    <div class="form-group ">
                                        <div class="col-md-4">
                                            <button type="submit" class="btn btn btn-success"> ADD </button>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                    </section>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

@if (ViewBag.Message != null)
{
    <script type="text/javascript">

         window.onload = function () {
          alert("@ViewBag.Message");
          };
    </script>

}
