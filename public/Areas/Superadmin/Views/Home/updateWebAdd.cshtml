@model edu_course.Models.webadd
@{
    Layout = "~/Areas/Superadmin/Views/Shared/_Layout.cshtml";

}
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
<script src="~/Themes/ckeditor/ckeditor.js"></script>

<!-- Registrations page-->
<div ng-controller="headerCtrl">
    <div class="container" style="background-color:white ; width:80% ">
        <h2 style="color:black; text-align:center"><b>Website Banner</b></h2>
        <div class="panel-group" id="accordion">
            <div class="panel panel-default">
                <div class="panel-body">
                    <section>
                        <div class="row">
                            <div class="col-md-10 offset-md-1">

                                @using (Html.BeginForm("updateWebAdd", "Home", FormMethod.Post, new { @id = "form", enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-horizontal">
                                        <hr />
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-6 col-md-offset-6 col-sm-4 col-sm-offset-5 col-5 col-xs-offset-4 "></div>

                                        <div class="">
                                            <img src="@Url.Content(Session["Image"].ToString())" height="135" width="150">
                                        </div>

                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-6 col-md-offset-6 col-sm-4 col-sm-offset-5 col-5 col-xs-offset-4"></div>
                                        <input type="file" id="UserImageFile" style="display:none" accept="image/png,image/jpg,image/jpeg" name="UserImageFile" />
                                        <div class="">
                                            <button class="btn btn-success" id="OpenImgUpload" type="button">
                                                <i class="fa fa-fw fa-camera"></i>
                                                <span>Change Photo</span>
                                            </button>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.Label("Link", htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-12">
                                            @Html.EditorFor(model => model.linq, new { htmlAttributes = new { @class = "form-control input-sm", @type = "text", placeholder = @Html.DisplayName("Enter Titlle") } })
                                            @Html.ValidationMessageFor(model => model.linq, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    

                                    




                                    <div class="form-group ">
                                        <div class="col-md-4">
                                            <button type="submit" id="btnSave" class="btn btn btn-success"> Update </button>
                                        </div>
                                    </div>
                                }

                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>




<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>

@if (ViewBag.Message != null)
{
    <script type="text/javascript">

         window.onload = function () {
          alert("@ViewBag.Message");
          };
    </script>

}
<script>
        $('#OpenImgUpload').click(function () { $('#UserImageFile').trigger('click'); });

</script>