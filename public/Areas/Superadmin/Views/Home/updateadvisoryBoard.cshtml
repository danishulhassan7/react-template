@model edu_course.Models.Team
@{
    Layout = "~/Areas/Superadmin/Views/Shared/_Layout.cshtml";

}
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
<script src="~/Themes/ckeditor/ckeditor.js"></script>

<!-- Registrations page-->
<div ng-controller="headerCtrl">
    <div class="container" style="background-color:white ; width:80% ">
        <h2 style="color:black; text-align:center"><b>Advisory Board Update</b></h2>
        <div class="panel-group" id="accordion">
            <div class="panel panel-default">
                <div class="panel-body">
                    <section>
                        <div class="row">
                            <div class="col-md-10 offset-md-1">

                                @using (Html.BeginForm("updateadvisoryBoard", "Home", FormMethod.Post, new { @id = "form", enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-horizontal">
                                        <hr />
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    </div>


                                    <div class="form-group">
                                        @Html.Label("Type", htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-12">
                                            @*@Html.DropDownList("Select Type", (IEnumerable<SelectListItem>)ViewData["BlogType"], "Select Type", new { @class = "form-control" })*@
                                            @Html.DropDownListFor(m => m.Department_ID, (IEnumerable<SelectListItem>)ViewBag.articletypelist, "--Select Type--", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => Model.Department_ID, "", new { @class = "text-danger" })
                                        </div>
                                    </div><div class="form-group">
                                        @Html.Label("Name", htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-12">
                                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control input-sm", @type = "text", placeholder = @Html.DisplayName("Enter Title") } })
                                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.Label("Designation", htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-12">
                                            @Html.EditorFor(model => model.Designation, new { htmlAttributes = new { @class = "form-control input-sm", @type = "text", placeholder = @Html.DisplayName("Enter Designation") } })
                                            @Html.ValidationMessageFor(model => model.Designation, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Short Description", htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-12">
                                            @Html.TextAreaFor(model => model.Short_Description, 5, 40, htmlAttributes: new { style = "width: 100%; max-width: 100%;", placeholder = @Html.DisplayName("Enter Short Description") })
                                            @Html.ValidationMessageFor(model => model.Short_Description, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Long Description", htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-12">
                                            @Html.TextAreaFor(model => model.Long_Description, 8, 40, htmlAttributes: new { required = "required", style = "width: 100%; max-width: 100%;", @id = "FullDescription", placeholder = @Html.DisplayName("Enter Long Description") })
                                            @Html.ValidationMessageFor(model => model.Long_Description, "", new { @class = "text-danger" })

                                            <script>

                                                CKEDITOR.replace("FullDescription");
                                            </script>

                                        </div>
                                    </div>
                                    @*<div class="form-group">
                                            @Html.LabelFor(m => m.CreatedDate, new { @class = "col-md-2 control-label" }),
                                            <div class="col-md-10">
                                                @Html.TextBoxFor(m => m.CreatedDate, "{yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                                                @Html.ValidationMessageFor(m => m.CreatedDate, "", new { @class = "text-danger" })
                                            </div>
                                        </div>*@


                                    @*<div class="form-group">
                                            @Html.LabelFor(m => m.Date, new { @class = "col-md-2 control-label" }),
                                                <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.Date, "{0:yyyy-MM-ddThh:mm:ss}", new { @class = "form-control", type = "datetime-local" })
                                        @Html.ValidationMessageFor(m => m.Date, "", new { @class = "text-danger" })
                                                </div>
                                            </div>*@


                                    <div class="form-group ">
                                        <div class="col-md-4">
                                            <button type="submit" id="btnSave" class="btn btn btn-success">Update </button>
                                        </div>
                                    </div>
                                }

                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>




<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
@*<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>*@


@if (ViewBag.Message != null)
{
    <script type="text/javascript">

         window.onload = function () {
          alert("@ViewBag.Message");
          };
    </script>

}