@model edu_course.Models.tbl_articletypeValidation
@{
    ViewBag.Title = "articletyped";
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
}


<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />

<!-- Registrations page-->
<div ng-controller="headerCtrl">
    <div class="container" style="background-color:white ; width:80% ">
        <h2 style="color:black; text-align:center"><b>ARTICLE TYPE</b></h2>
        <div class="panel-group" id="accordion">
            <div class="panel panel-default">
                <div class="panel-body">
                    <section>
                        <div class="row">
                            <div class="col-md-10 offset-md-1">
                                @using (Html.BeginForm("articletyped","Home",FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-horizontal">
                                        <hr />
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                    </div>

                                    <div class="form-group">
                                        @Html.Label("Type", htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-12">
                                            @Html.EditorFor(model => model.Article_Typename, new { htmlAttributes = new { @class = "form-control input-sm", placeholder = @Html.DisplayName("Enter Article Type") } })
                                            @Html.ValidationMessageFor(model => model.Article_Typename , "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <div class="col-md-4">
                                            <button type="submit" class="btn btn btn-success"> ADD </button>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>


@if (ViewBag.Message != null)
            {
    <script type="text/javascript">

         window.onload = function () {
          alert("@ViewBag.Message");
          };
    </script>

}





