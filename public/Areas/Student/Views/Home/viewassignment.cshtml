@model IEnumerable<edu_course.Models.SchoolAssignment>

<!DOCTYPE html>
<html lang="en">

@{
    ViewBag.Title = "viewassignmentss";
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
}



<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- End of Topbar -->
        <!-- Begin Page Content -->
        <div class="container-fluid">

            <!-- Page Heading -->
            
            <!-- DataTales Example -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Assignment</h6>


                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Assignment Name</th>
                                    <th>Assignment File</th>
                                    <th>Duration</th>
                                    <th>Action Submit Form</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>

                                    <th>Date</th>
                                    <th>Assignment Name</th>
                                    <th>Assignment File</th>
                                    <th>Duration</th>
                                    <th>Action Submit Form</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelitem => item.CreatedDate)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelitem => item.AssignmentName)
                                        </td>
                                        <td>
                                            <a href="~/file_upload/@item.AssignmentUrl" />
                                            @Html.DisplayFor(modelitem => item.AssignmentUrl)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelitem => item.Duration)
                                        </td>
                                        <td>
                                            <button class="button button3" style="background-color: #5DC560; border-color:#5DC560; border-radius:5%;">@Html.ActionLink("Add Submission", "assignmentsubmitted", new { id = item.AssignmentId }, new { Style = "color:White; text-decoration:none;" })</button>
                                        </td>

                                    </tr>

                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->
    <!-- Footer -->
    <footer class="sticky-footer bg-white">
        <div class="container my-auto">
            <div class="copyright text-center my-auto">
                <span>Copyright &copy; Your Website 2019</span>
            </div>
        </div>
    </footer>
    <!-- End of Footer -->
    </div>
    <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="login.html">Logout</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>