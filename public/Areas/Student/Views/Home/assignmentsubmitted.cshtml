@model edu_course.Models.tbl_AssignmentSubmittedValidation

@{
    ViewBag.Title = "Test";
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
}

<!
<div ng-controller="headerCtrl">
    <div class="container" style="background-color:white ; width:80% ">
        <h2 style="color:black; text-align:center"><b>Assignment Form</b></h2>
        <div class="panel-group" id="accordion">
            <div class="panel panel-default">
                <div class="panel-body">
                    <section>
                        <div class="row">
                            <div class="col-md-10 offset-md-1">

                                @using (Html.BeginForm("assignmentsubmitted", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-horizontal">
                                        <hr />
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                    </div>


                                    <div class="form-group">
                                        @Html.Label("Assignment Url", htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-12">
                                            @Html.TextBoxFor(model => model.UserdocFIle, new { type = "file" })
                                            @Html.ValidationMessageFor(model => model.UserdocFIle, "", new { @class = "text-danger" })
                                            @Html.ValidationMessage("CustomError")
                                        </div>
                                    </div>





                                    <div class="form-group ">
                                        <div class="col-md-4">
                                            <button type="submit" class="btn btn btn-success"> Submit </button>
                                        </div>
                                    </div>

                                }
                    </section>

                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

@if (ViewBag.Message != null)
{
    <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>

}